//schema.prisma
datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model News_Form {
  id           Int      @id @default(autoincrement())
  user_id      Int
  title        String
  status       String
  body         String
  created_date DateTime
  image_url    String?
  type         String
  pdf_file     Bytes?
}

model User_Form {
  id         Int      @id @default(autoincrement())
  name       String
  email      String  @unique
  password   String
  user_type  String  @default("user")
  gender     String
}
